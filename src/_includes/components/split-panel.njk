<section style="background-color:#ffffff;" class="govuk-!-padding-top-0">
  <div class="govuk-width-container">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        <div class="govuk-!-margin-top-3 govuk-!-margin-bottom-5">
          <div class="govuk-grid-row split-panel" style="background: #f3f2f1;">
            <div class="govuk-grid-column-one-half text-column">

              <h2 class="govuk-heading-l govuk-!-margin-top-3">{{split.title}}</h2>
              {% set body = splitBody %}
              <p class="govuk-body">{{split.description}}</p>
              <p class="govuk-body">
                <a href="{{split.ctaUrl}}" class="govuk-link govuk-link--no-visited-state govuk-!-font-weight-bold">
                  {{split.ctaText}}</a>
              </p>
            </div>
            <div class="govuk-grid-column-one-half image-column">
              <div class="image-container" style="background-image: url('/assets/images/{{split.image}}');"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>