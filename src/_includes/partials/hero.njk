<section 
  class="ham-hero" 
  style="background-image: url({{ hero.imageUrl }})">
  {% set class = "ham-header-transparent" %}
  {% include "partials/header.njk" %}
  <div class="govuk-width-container">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h2 class="govuk-heading-xl govuk-!-margin-bottom-7 govuk-!-margin-top-9 ham-inverse-text">
          {{ hero.title }}
        </h2>
        <p class="govuk-body-lead ham-inverse-text">
          {{hero.description}}</p>
        <a href="{{ hero.ctaUrl }}" class="govuk-button govuk-button--start govuk-!-margin-top-5 govuk-!-margin-bottom-0">
          {{ hero.ctaText }}
        </a>
      </div>
    </div>
  </div>
</section>