<section style="margin-top:30px">
  <div>
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h2 class="govuk-heading-l">Contact us</h2>

        <form
          name="contact"
          method="POST"
          action="/thank-you/"
          data-netlify="true"
          netlify-honeypot="bot-field"
          class="govuk-!-margin-bottom-6"
          netlify
        >
          {# Netlify needs this hidden input to match the form name #}
          <input type="hidden" name="form-name" value="contact"/>

          {# Honeypot field (hidden from humans) #}
          <p class="govuk-visually-hidden">
            <label>Donâ€™t fill this out: <input name="bot-field"/></label>
          </p>

          <div class="govuk-grid-row">
            <div class="govuk-grid-column-one-half">
              <div class="govuk-form-group">

                <label class="govuk-label" for="name">Name</label>
                <input class="govuk-input" id="name" name="name" type="text" required/>
              </div>
            </div>
            <div class="govuk-grid-column-one-half">
              <div class="govuk-form-group">

                <label class="govuk-label" for="email">Email</label>
                <input class="govuk-input" id="email" name="email" type="email" required/>
              </div>
            </div>
          </div>

          <div class="govuk-form-group">
            <label class="govuk-label" for="phone">Phone</label>
            <input class="govuk-input" id="phone" name="phone" type="tel"/>
          </div>

          <div class="govuk-form-group">
            <label class="govuk-label" for="message">Message</label>
            <textarea class="govuk-textarea" id="message" name="message" rows="6" required></textarea>
          </div>

          <button class="govuk-button" type="submit">Send</button>
        </form>
      </div>
    </div>
  </div>
</section>